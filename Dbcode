    private void AddbtnActionPerformed(java.awt.event.ActionEvent evt) {                                       
        try {
            String name,age,course;
            name=txtName.getText();
            age=txtAge.getText();
            course=txtCourse.getText();
            pat=con.prepareStatement("insert into Stu1(name,age,course)values(?,?,?)");
            pat.setString(1,name);
            pat.setString(2,age);
            pat.setString(3,course);
            pat.executeUpdate();
            JOptionPane.showMessageDialog(this,"Records Added");
            txtName.setText("");
            txtAge.setText("");
            txtCourse.setText("");
            txtName.requestFocus();
        } catch (SQLException ex) {
            Logger.getLogger(Test4.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                      

